#main
  #repositories
    %table
      %tr
        %th Name
        %th Travis
        %th Gemnasium
        %th Codeclimate
        %th Activities
      - repositories.each do |repository|
        %tr
          %td=repository.name
          %td
            %a{:href => repository.travis_status_href}
              %img{:src => repository.travis_image_src}
          %td
            %a{:href => repository.gemnasium_status_href}
              %img{:src => repository.gemnasium_image_src}
          %td
            %a{:href => repository.codeclimate_status_href}
              %img{:src => repository.codeclimate_image_src}
          %td
            updated 17s
